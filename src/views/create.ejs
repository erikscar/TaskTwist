<%- include('./layouts/header', {title: 'TaskTwist | Create' , style: '/styles/createAndEdit.css' }) %>

  <body>
    <form method='post' action="/checklists?_method=post" class="main-container">

      <header>
        <div class="logo">
          <img src="/imgs/commom/TaskTwistLogo.png" alt="taskTwist-logo" class="logo-image">
          <h1 class="logo-title">TaskTwist</h1>
        </div>

        <nav class="navbar is-bold">
          <a href="/">HOME PAGE</a>
          <a href="/checklists">SHOW CHECKLISTS</a>
        </nav>
      </header>

      <p class="main-title">New CheckList</p>

      <div class="input-wrapper">
        <label for="checkListName">Name: </label>
        <input type="text" name="checkList[name]" value="<%= checkList.name %>" id="checklist-name"
          placeholder="CheckList Name..." required>
      </div>

      <div class="input-wrapper">
        <label for="checkListImage">Image: </label>
        <input type="text" name="checkList[image]" value="<%= checkList.image %>" id='checklist-image'
          placeholder="Image Url...">
      </div>

      <div class="function-btns-wrapper">
        <button type="submit" class="save-btn">SAVE</button>
        <a href="/checklists" class="cancel-btn">CANCEL</a>
      </div>
    </form>
  </body>

  </html>